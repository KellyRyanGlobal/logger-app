pipeline {
    agent { 
                dockerfile true               
    }
    environment {

        DOCKER_USER = credentials('docker-username')
        DOCKER_PASS = credentials('docker-password')
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                make -C src
                chmod +x build.sh
                ./build.sh > output.out
                '''
            }
        }
         stage('Smoke Test') {
            steps {
                ansiColor('vga') {
                    sh '''
                    chmod +x test/smoke/smoke.sh
                    '''
                }                
            }
        }
        stage('Functional Test') {
            steps {
                ansiColor('vga') {
                    sh '''
                    chmod +x test/functional/functional.sh
                    test/functional/functional.sh output.out
                     '''

                }                
            }
        }
        stage('Acceptance Test') {
            steps {
                ansiColor('vga') {
                sh '''
                chmod +x test/acceptance/acceptance.sh
                test/acceptance/acceptance.sh output.out
                '''
                }
            }
        }
     }
}
