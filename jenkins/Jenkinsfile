pipeline {
    agent {
        docker { image 'alpine:latest' }
    }
    environment {
        DOCKER_USER = credentials('docker-username')
        DOCKER_PASS = credentials('docker-password')
        APP_NAME = 'test_app'
        VERSION = '1.0'
    }
    stages {
      stage('Build Test_App') {
          steps {
              sh '''docker build -t ${APP_NAME}:latest -f Dockerfile .'''
          }
        }
        }
}