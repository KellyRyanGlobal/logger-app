pipeline {
    agent {
        docker { image 'alpine:latest' }
    }
    environment {
        DOCKER_USER = credentials('docker-username')
        DOCKER_PASS = credentials('docker-password')
        APP_NAME = 'test_app'
        VERSION = '1.0'
    }
    stages {
        stage('Docker Build Test_App') {
            agent {
                    docker { image 'alpine:latest' }
                }
            steps {
                sh 'docker build -t test_app:latest -f Dockerfile .'
            }
        }
    }
}