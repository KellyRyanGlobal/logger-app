node {
    environment {
        DOCKER_USER = credentials('docker-username')
        DOCKER_PASS = credentials('docker-password')
        APP_NAME = 'test_app'
        VERSION = '1.0'
    }
    stage('Build') {
        checkout scm
        def testimage = docker.build('test-alpine', ".")
        testimage.inside {
            sh 'ls src/'
         }
    }
}

