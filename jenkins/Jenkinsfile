pipeline {
    agent any
    environment {
        DOCKER_USER = credentials('docker-username')
        DOCKER_PASS = credentials('docker-password')
        APP_NAME = 'test_app'
        VERSION = '1.0'
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                docker build -t ${APP_NAME} .
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                docker run -it --rm --name test1 test-alpine:latest
                ./test.exe
                '''
            }
        }
     }
}
