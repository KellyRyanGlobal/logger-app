pipeline {
    agent any
    
    stages {
        stage('Build') {
            agent {
                docker { 
                     dockerfile true
                }
            }
            environment {

                DOCKER_USER = credentials('docker-username')
                DOCKER_PASS = credentials('docker-password')
            }

            steps {
                sh '''
                make -C src
                ./build.sh > output.out
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                test/functional/functional.sh
                '''
            }
        }
     }
}
